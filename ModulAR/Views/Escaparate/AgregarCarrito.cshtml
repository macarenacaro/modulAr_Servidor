<!-- Views/Escaparate/AgregarCarrito.cshtml -->
@model ModulAR.Models.Producto

<h2>Agregar al Carrito</h2>

<div>
    <img src="~/imagenes/@Model.Imagen" style="max-width: 100%; max-height: 200px;" />
</div>

<p>Descripción: @Model.Descripcion</p>
<p>Texto: @Model.Texto</p>
<p>Stock: @Model.Stock</p>
<p>Precio: @Model.PrecioCadena</p>
<p>Categoría: @Model.Categoria.Descripcion</p>

<form asp-action="AgregarCarritos" asp-controller="Escaparate" method="post"> 
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="cantidad">Cantidad:</label>
        <input type="number" name="cantidad" width="30" class=" form-control" value="1" min="1" required  />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Añadir al Carrito</button>
</form>