@model IEnumerable<ModulAR.Models.Producto>

@{
    var categoriasCount = (ViewData["Categorias"] as List<ModulAR.Models.Categoria>)?.Count ?? 0;
    var productosCount = (ViewData["Productos"] as List<ModulAR.Models.Producto>)?.Count ?? 0;
}
<style>


  .box2 {
    display:flex;
    box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.2);
    min-height: 230px;
    width: 200px;
    text-align: center;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgb(14, 23, 38)
    margin-right: 10px;
    margin-left: 10px;
    border-radius: 15px;
}

.box2 h4 {
margin-top:10px;
 font-size: 23px;
color: white;
text-shadow: 2px 2px 4px rgb(0, 51, 102);
border-radius: 5px;}

.box2 p{font-weight:500}


#btnBox{
    margin-top:auto;
    margin-bottom:10px
}










</style>




<h1>Escaparate</h1>
<br />

<div style="display: flex;">

    <!-- Lateral izquierdo con categorías -->
    <div style="flex: 1; padding: 10px; background-color: #f0f0f0;">
        <h4>Categorías</h4>
        <ul>
            @foreach (var categoria in ViewData["Categorias"] as List<ModulAR.Models.Categoria>)
            {
                <li style="list-style:none"><a href="?categoryId=@categoria.Id">@categoria.Descripcion</a></li>
            }
        </ul>
    </div>

    <!-- Sección central con productos -->
    <div style="flex: 3; padding: 10px; overflow-y: auto;"> @*PARA AGREGAR OVERFLOW*@

        <h2>Productos</h2>

        <div id="SeccionPaginacion" style="display: flex; flex-wrap: wrap; gap: 20px;">

            @foreach (var producto in ViewData["Productos"] as List<ModulAR.Models.Producto>)
            {
                <div class="box2" style="background-image: url('@Url.Content("~/imagenes/" + producto.Imagen)'); background-size: cover">

                    <!-- Imagen del producto -->
                    @*<img src="~/imagenes/@producto.Imagen" alt="@producto.Descripcion" style="max-width: 100%; max-height: 100px;">*@

                    <!-- Descripción del producto -->
                    <h4>@producto.Descripcion</h4>
                    
                    <!-- Precio del producto -->
                    <p>Precio: @producto.PrecioCadena €</p>

                    <!-- Descripción del producto -->
                    @*Stock: @producto.Stock*@


                    <!-- Botón para añadir al carrito (modal) -->
                    <button id="btnBox" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCarrito-@producto.Id">
                        Añadir al carrito
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modalCarrito-@producto.Id" tabindex="-1" aria-labelledby="modalCarritoLabel-@producto.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCarritoLabel-@producto.Id">Añadir al Carrito</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="display:flex; flex-direction:column; align-items:center; justify-content:center">
                                    <!-- Contenido del modal -->
                                    <img src="~/imagenes/@producto.Imagen" style="max-width: 100%; max-height: 200px;" />
                                    <p>Descripción: @producto.Descripcion</p>
                                    <p>Texto: @producto.Texto</p>
                                    @* <p>Stock: @producto.Stock</p>*@
                                    <p>Precio: @producto.PrecioCadena</p>
                                    <p>Categoría: @producto.Categoria.Descripcion</p>

                                    <form asp-action="AgregarCarrito" asp-controller="Escaparate" method="post">
                                        <input type="hidden" name="id" value="@producto.Id" />
                                        <input type="hidden" name="stock" value="@producto.Stock" />
                                        
                                        <small class="text-muted">Máximo Disponible: @producto.Stock</small>
                                        
                                        <div class="form-group" style="display:flex; flex-direction: row">
                                            <label for="cantidad">Cantidad:</label>
                                            <input type="number" name="cantidad" class="form-control" style="width:120px" value="1" min="1" max="@producto.Stock" required />
                                            
                                        </div>
                                        

                                        <button type="submit" class="btn btn-primary" style="margin-top:20px" >Añadir al Carrito</button>
                                    </form>
                                    <!-- Fin del contenido del modal -->
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }

        </div>

        <!--1--> <!--2-->







    </div>
</div>