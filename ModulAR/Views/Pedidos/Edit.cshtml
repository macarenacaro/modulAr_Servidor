            </div>
            <div class="form-group">
                <label class="control-label">Cobrado</label>
                <input asp-for="Enviado" class="form-control" />
                <span asp-validation-for="Enviado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cobrado</label>
                <input asp-for="Cobrado" class="form-control" />
                <span asp-validation-for="Cobrado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Devuelto</label>
                <input asp-for="Devuelto" class="form-control" />
                <span asp-validation-for="Devuelto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Anulado</label>
                <input asp-for="Anulado" class="form-control" />
                <span asp-validation-for="Anulado" class="text-danger"></span>
            </div>
<div class="form-group">
    <label class="control-label"> Cliente</label>
    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId" size="5" multiple searchable="true"></select>
    <span asp-validation-for="ClienteId" class="text-danger"></span>
</div>
            <div class="form-group">
                <label class="control-label">Estado</label>
                <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
                <span asp-validation-for="EstadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
